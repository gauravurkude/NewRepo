@using BOL;

@{
    ViewData["Title"] = "Product Details Page";
}

@{
    Product product = ViewBag.currentProduct as Product;

    <h3> Product Details</h3>
    <hr/>

    <h4>@product.Title</h4>
    <br/>
    <p>Id: @product.ProductId</p>
    <p>Description: @product.Description</p>
    <p>Unit Price: @product.UnitPrice Rs.</p>
    <p>Stock Available: @product.StockAvailable</p>
    <br/>

    <a href="/shoppingcart/addtocart/@product.ProductId">Add to Cart</a>
}
